####################################################################
# Editor configuration file
####################################################################
root = true

[*.{yml,md}]
indent_style = space

[*.{md}]
indent_size = 4

[*.{yml}]
indent_size = 2

[*.{yml,md}]
end_of_line = "crlf"

[*.{gitattribute,gitignore,editorconfig,yml,md}]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
